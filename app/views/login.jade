extends layout

block content
	.container
			.container-fluid
				#loginfailbanner.alert.alert-warning.hidden(role='alert') Invalid username or password!
			.container.col-lg-4.col-lg-offset-4.col-md-4.col-md-offset-4.col-sm-4.col-sm-offset-4.col-xs-0.col-xs-offset-0
				form#loginform(action='/auth/login', method='post')
					.form-group
						label username:
						input#username(type="text", name="username")
					.form-group
						label password:
						input#password(type="password", name='password')
					button#loginButton.btn.btn-default(type="button", value='submit') Login

